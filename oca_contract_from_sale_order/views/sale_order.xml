<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="act_related_sale_contract" model="ir.actions.act_window">
            <field name="name">Related Contracts</field>
            <field name="res_model">account.analytic.account</field>
            <field name="domain">[('related_sale_order_id','=',active_id)]</field>
            <field name="view_id" ref="account.view_account_analytic_account_list" />
        </record>

        <record id="view_contract_from_sale_order_inherit" model="ir.ui.view">
            <field name="name">view.contract.from.sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="contract_from_sale"  attrs="{'readonly':[('state','!=', 'draft')]}"  />
                    <field name="contract_type"  attrs="{'invisible':[('contract_from_sale','=', False)]}"  />
                </xpath>
                <xpath expr="//sheet/h1" position="after">
                    <group name="sale_extra_buttons"  attrs="{'invisible':[('contract_from_sale','=', False)]}" >
                        <button class="oe_stat_button" type="action" icon="fa-edit"
                                name="%(act_related_sale_contract)d"
                                string="Contratos" help="Ver contratos asociados">
                        </button>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
